    <script>
        function showWeek(week) {
            // Hide all week boxes
            const weekBoxes = document.querySelectorAll('.week-box');
            weekBoxes.forEach(box => box.style.display = 'none');

            // Show the selected week
            const selectedWeek = document.getElementById(`week-${week}`);
            if (selectedWeek) {
                selectedWeek.style.display = 'block';
            }
        }
    </script>
